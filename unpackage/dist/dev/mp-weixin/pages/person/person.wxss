.container {
  margin: 0 40rpx;
}
.header {
  height: 200rpx;
  padding: 0 30rpx;
  background-color: floralwhite;
  display: flex;
  align-items: center;
  font-size: 35rpx;
  box-shadow: 3px 2px 2px #ececec;
}
.header image {
  width: 135rpx;
  height: 135rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}
.box {
  border-radius: 20rpx;
}
.body {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  height: 340rpx;
  background-color: ghostwhite;
  margin: 20rpx 0;
  box-shadow: 3px 2px 2px #ececec;
}
.body .card {
  margin: 15rpx 5rpx;
  width: 150rpx;
  height: 150rpx;
  text-align: center;
}
.body .card .image {
  margin: 10rpx;
  display: inline-block;
  height: 70rpx;
  width: 70rpx;
}
.body .card .image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.body .card .font {
  width: 100%;
  font-size: 26rpx;
}

